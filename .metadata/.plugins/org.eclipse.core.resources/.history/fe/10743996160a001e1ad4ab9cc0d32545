# SQL Queries
sql.adduser=insert into users_0016 values (?,?,?,?,?,?)
sql.updateUser=update users_0016 set password=?, name=?, email=? where username=?
sql.deleteUser=delete from users_0016 where userName=?
sql.changePassword=update users_0016 set password=? where userName=?
sql.allUsers=select * from users_0016
sql.userByUserName=select * from users_0016 where userName=?

#SQL Category Queries
sql.addCategory=insert into category_1234 values (?,?,?,?)
